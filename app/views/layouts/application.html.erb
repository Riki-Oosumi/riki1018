<!DOCTYPE html>
<html>
  <head>
    <title>Days</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/f1f36a12bf.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <div class="home">
      <%=link_to days_path do %>
        <%= image_tag 'title.png', alt: "day", class: "rogo" %>
      <%end%>
    </div>
    <div class="header-list">
      <div class="post">
          <% if user_signed_in? %>
            <%= link_to new_day_path, class: "btn btn btn-secondary text-white", method: :get do %>
             <i class="fa-regular fa-calendar-plus"></i>
            <% end %>
          <% end %>
        
      </div>
      <div class="log">
          <% if user_signed_in? %>
            <%= link_to destroy_user_session_path, class: "btn btn btn-secondary text-white", method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i>
            <% end %>
          <% else %>
            <%= link_to "新規登録", new_user_registration_path %></li>
            <%= link_to "ログイン", new_user_session_path %></li>
          <% end %>
      </div>
      <div class="mypage_link">
      <% if user_signed_in? %>
        <%= link_to user_path(current_user.id), class: "btn btn btn-secondary text-white", method: :get do %>
          <i class="fa-solid fa-user" style="color: #000;"></i>
        <% end %>
      <% end %>
      </div>
    </div>
  </header>
  <main>
   <%= yield %>
  </main>
 </body>
</html>
