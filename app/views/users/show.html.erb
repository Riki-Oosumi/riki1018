<body class="user1">
<div class="users_show_all">
  <h1>マイページ</h1>
  <p>名前 : <%= @user.name %></p>
  <br>
  <p>メールアドレス : <%= @user.email %></p>
  <br>
  <p>プロフィール : <%= @user.profile %></p>
  <br>
  <% if current_user.id == @user.id %>
    <%= link_to "編集する", edit_user_registration_path %>
  <% end %>

  <h2>ユーザーの投稿一覧</h2>
  <% @user.days.each do |t| %>
    <%= t.user.name %>
    <%= t.body %>
  <% end %>

  <!-- 以下はいいね機能を実装している場合-->
  <h2>ユーザーがいいねした投稿一覧</h2>
  <% @user.liked_days.each do |t| %>
    <%= t.user.name %>
    <%= t.body %>
  <% end %>
  <!-- ここまで-->

  <%= link_to "Day一覧に戻る", days_path %>
</div>
</div>
